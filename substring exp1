#include <stdio.h>
#include <string.h>

int main() {
    char str[100], substr[50];

    // Input main string
    printf("Enter the main string: ");
    scanf(" %[^\n]", str);

    // Input substring to search
    printf("Enter the substring to search: ");
    scanf(" %[^\n]", substr);

    // Check for substring
    if (strstr(str, substr) != NULL) {
        printf("Substring found!\n");
    } else {
        printf("Substring not found.\n");
    }

    return 0;
}
